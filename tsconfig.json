{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs", // for backend
    // "module": "es2020", // for frontend
    "lib": ["ES2022"],

    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },

    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["dist", "node_modules"]
}
